@model IEnumerable<CarSalesAndService.Entities.Servis>

@{
    ViewData["Title"] = "Servis Kayıtları";
}

<h1>Servis Kayıtları</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Servise Geliş Tarihi
            </th>
            <th>
                Araç Sorunu
            </th>
            <th>
                Servis Ücreti
            </th>
            <th>
                Servisten Çıkış Tarihi
            </th>
            <th>
                Yapılan İşlemler
            </th>
            <th>
                Garanti Kapsamında mı ?
            </th>
            <th>
                Araç Plakası
            </th>
            <th>
                Marka
            </th>
            <th>
                Model
            </th>
            <th>
                Kasa Tipi
            </th>
            <th>
                Şase No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notlar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiseGelisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AracSorunu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServisUcreti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServistenCikisTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YapilanIslemler)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GarantiKapsamindaMi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AracPlaka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KasaTipi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaseNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notlar)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
