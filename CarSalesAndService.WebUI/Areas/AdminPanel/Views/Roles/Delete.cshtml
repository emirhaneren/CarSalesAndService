@model CarSalesAndService.Entities.Rol

@{
    ViewData["Title"] = "Rol Sil";
}

<h1>Rol Sil</h1>

<h3>Silmek istediğinizden emin misiniz ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Rol Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Listeye Dön</a>
    </form>
</div>
