@model CarSalesAndService.Entities.Slider

@{
    ViewData["Title"] = "Slide Sil";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slide Sil</h1>

<h3>Silmek istediğinize emin misiniz ?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Başlık
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Baslik)
        </dd>
        <dt class = "col-sm-2">
            Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class = "col-sm-2">
            Fotoğraf
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Img/Cars/@Model.Foto" alt="" height="60px" />
        </dd>
        <dt class = "col-sm-2">
            Link
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Listeye Dön</a>
    </form>
</div>
