@model CarSalesAndService.Entities.Satis

@{
    ViewData["Title"] = "Satış Sil";
}

<h1>Satış Sil</h1>

<h3>Silmek istediğinize emin misiniz ?</h3>
<div>
    <h4>Satış</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Satış Fiyatı
        </dt>
        <dd class="col-sm-10">
            @Model.SatisFiyati.ToString("c")
        </dd>
        <dt class="col-sm-2">
            Satış Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SatisTarihi)
        </dd>
        <dt class="col-sm-2">
            Araç Modeli
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Arac.Renk)
            @Html.DisplayFor(model => model.Arac.Modeli)
            @Html.DisplayFor(model => model.Arac.Marka.Adi)
        </dd>
        <dt class="col-sm-2">
            Müşteri
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Musteri.Adi)
            @Html.DisplayFor(model => model.Musteri.Soyadi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Listeye Dön</a>
    </form>
</div>
